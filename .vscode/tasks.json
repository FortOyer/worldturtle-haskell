{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "stack build",
      "type": "shell",
      "command": "stack build",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "sphinx build",
      "type": "shell",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "windows": {
        "command" : "./docs/hello-worldturtle/make html"
      },
      "linux": {
        "command": "cd ./docs/hello-worldturtle && make html"
      }
    }
  ]
}